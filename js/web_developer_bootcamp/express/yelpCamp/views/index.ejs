<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campground for Yelp Camp</h1>
            <p>View our fantastic camp gounds.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground) { %>
        <div class="col-lg-3 col-md-3 col-sm-6 container">
            <div class="thumbnail" style="max-height: 100%; max-width: 100%">
                <img src="<%= campground.image %>" alt="<%= campground.name %>" width="300 px" height="200 px">
            </div>
            <div class="caption">
                <h4><%= campground.name %></h4>
            </div>
            <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
        <% }) %>
    </div>
</div>

<% include partials/footer %>
